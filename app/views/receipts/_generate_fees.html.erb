<div id="modal-shows">
    <div class="modal fade" id="modal-dialog" style="display: none;">
        <div class="modal-dialog">
        <div class="modal-content animated bounceInRight">
                <div class="modal-header">
                    <h3>
                        Generate Fees
                    </h3>
                    <button type="button" class="close pull-right" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
                </div>
                <%= form_for FeeDetail.new, html: { class: "form-horizontal" }, remote: true do |f| %>
                    <%= f.hidden_field :fee_id, value: @fee.id %>
                    <div class="modal-body">
                         <div class="row">
                              <div class="col-lg-12">
                                   <h3>
                                        Current School Year  <%= Time.current.year %>
                                   </h3>
                              </div>
                         </div>
                         <div class="row" style="margin-top: 20px;">
                              <div class="col-lg-6">
                                   <h1>
                                   <%=  
                                        if @fee.fee_details.present?
                                             @fee.fee_details.order(fee_date: :desc).first.id
                                        else
                                             "none"
                                        end
                                   %>
                                   </h1>
                                     
                                   <div class="checkbox checkbox-primary">
                                        <input id="checkbox2" type="checkbox" checked="" name="fee_details[january]">
                                        <label for="checkbox2">
                                             January
                                        </label>
                                   </div>
                                   <div class="checkbox checkbox-primary">
                                        <input id="checkbox2" type="checkbox" checked="" name="fee_details[february]">
                                        <label for="checkbox2">
                                             February
                                        </label>
                                   </div>
                                   <div class="checkbox checkbox-primary">
                                        <input id="checkbox2" type="checkbox" checked="" name="fee_details[march]">
                                        <label for="checkbox2">
                                             March
                                        </label>
                                   </div>
                                   <div class="checkbox checkbox-primary">
                                        <input id="checkbox2" type="checkbox" checked="" name="fee_details[april]">
                                        <label for="checkbox2">
                                             April
                                        </label>
                                   </div>
                                   <div class="checkbox checkbox-primary">
                                        <input id="checkbox2" type="checkbox" checked="" name="fee_details[may]">
                                        <label for="checkbox2">
                                             May
                                        </label>
                                   </div>
                                   <div class="checkbox checkbox-primary">
                                        <input id="checkbox2" type="checkbox" checked="" name="fee_details[june]">
                                        <label for="checkbox2">
                                             June
                                        </label>
                                   </div>
                              </div>
                              <div class="col-lg-6">
                                   <div class="checkbox checkbox-primary">
                                        <input id="checkbox2" type="checkbox" name="fee_details[july]">
                                        <label for="checkbox2">
                                             July
                                        </label>
                                   </div>
                                   <div class="checkbox checkbox-primary">
                                        <input id="checkbox2" type="checkbox" name="fee_details[august]">
                                        <label for="checkbox2">
                                             August
                                        </label>
                                   </div>
                                   <div class="checkbox checkbox-primary">
                                        <input id="checkbox2" type="checkbox" checked="" name="fee_details[september]">
                                        <label for="checkbox2">
                                             September
                                        </label>
                                   </div>
                                   <div class="checkbox checkbox-primary">
                                        <input id="checkbox2" type="checkbox" checked="" name="fee_details[october]">
                                        <label for="checkbox2">
                                             October
                                        </label>
                                   </div>
                                   <div class="checkbox checkbox-primary">
                                        <input id="checkbox2" type="checkbox" checked="" name="fee_details[november]">
                                        <label for="checkbox2">
                                             November
                                        </label>
                                   </div>
                                   <div class="checkbox checkbox-primary">
                                        <input id="checkbox2" type="checkbox" checked="" name="fee_details[december]">
                                        <label for="checkbox2">
                                             December
                                        </label>
                                   </div>
                              </div>
                         </div>
                         
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                        <%= button_tag(type: 'Submit', class: "btn btn-primary") do %>
                            Generate
                        <% end %> 
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
