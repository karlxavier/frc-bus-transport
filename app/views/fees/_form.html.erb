<div class="wrapper wrapper-content animated fadeInRight" style="padding-bottom: 0;">
     <div class="row">
          <div class="col-lg-12">
               <div class="ibox">
                    <div class="ibox-content">

                         <div class="form-group row">
                              <label class="col-sm-2 col-form-label">Student Account No.</label>
                              <div class="col-sm-4">
                                   <%= form_for :filter, method: :get do |f| %>
                                        <div class="input-group">
                                             <%= f.text_field :code, class: "form-control", placeholder: "Student Account No.", required: "" %>
                                             <span class="input-group-append"> 
                                             <%= f.submit 'Load Student Data', class: "btn btn-primary"%>
                                        </div>
                                   <% end %>                   
                              </div>
                         </div>
                         <div class="hr-line-dashed"></div>
                         <div class="form-group  row">
                              <label class="col-sm-2 col-form-label">Name</label>
                              <div class="col-sm-4">
                                   <h4><%= @student.present? ? @student['Name'] : '' %></h4>
                              </div>
                              <label class="col-sm-2 col-form-label">Status</label>
                              <div class="col-sm-4">
                                   <h4><%= @student.present? ? @student['StudentStatus'] : '' %></h4>
                              </div>
                         </div>

                    </div>
               </div>
          </div>
     </div>
</div>

<div id="student_fees">
     <% if @student.present? %>
          <%= render 'student_fees' %>
     <% end %>
</div>