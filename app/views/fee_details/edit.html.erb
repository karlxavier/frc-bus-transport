<div class="row wrapper border-bottom white-bg page-heading">
     <div class="col-lg-10">
          <h2>Edit Student Revenues</h2>
          <ol class="breadcrumb">
               <li class="breadcrumb-item">
                    <%= link_to 'Home', root_path %>
               </li>
               <li class="breadcrumb-item">
                    <a>Revenues</a>
               </li>
               <li class="breadcrumb-item active">
                    <strong>Edit Student Revenues</strong>
               </li>
          </ol>
     </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
     <div class="row">
          <div class="col-lg-12">
               <div class="ibox ">
                    <div class="ibox-title">
                         <h5>Revenues </h5>
                    </div>
                    <div class="ibox-content">
                        <%= form_for @fee_detail, html: { class: "form-horizontal" } do |f| %>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Amount</label>
                                <div class="col-sm-10">
                                    <%= f.text_field :amount, class: "form-control", required: true %>
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>

                            <div class="form-group">
                                <div class="col-sm-4 col-sm-offset-2">
                                    <%= link_to 'Cancel', fee_details_path, class: "btn btn-white" %>
                                    <%= button_tag(type: 'Submit', class: "btn btn-primary") do %>
                                        Save changes
                                    <% end %> 
                                </div>
                            </div>

                        <% end %>
                    </div>
               </div>
          </div>
     </div>
</div>