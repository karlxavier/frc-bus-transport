<div id="modal-shows">
    <div class="modal fade" id="modal-dialog" style="display: none;">
        <div class="modal-dialog">
        <div class="modal-content animated bounceInRight">
                <div class="modal-header">
                    <h3>
                        Generate Revenue
                    </h3>
                    <button type="button" class="close pull-right" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
                </div>
                <%= form_for FeeDetail.new, html: { class: "form-horizontal" }, remote: true do |f| %>
                    <div class="modal-body">
                         <div class="alert alert-info">
                              Months of July and August will be automatically excluded.
                         </div>
                         <div class="hr-line-dashed"></div>
                         <div class="form-group row">
                              <label class="col-sm-2 col-form-label">From</label>
                              <div class="col-lg-10">
                              
                                   <div class="input-group date" id="datetimepicker1">
                                        <%= f.text_field :created_at, class: "form-control form-control-lg m-b", placeholder: "From Date", required: "" %>
                                        <div class="input-group-addon">
                                             <i class="fa fa-calendar"></i>
                                        </div>
                                   </div>
                                   
                              </div>
                         </div>
                         <div class="form-group row">
                              <label class="col-sm-2 col-form-label">To</label>
                              <div class="col-lg-10">
                              
                                   <div class="input-group date" id="datetimepicker2">
                                        <%= f.text_field :updated_at, class: "form-control form-control-lg m-b", placeholder: "To Date", required: "" %>
                                        <div class="input-group-addon">
                                             <i class="fa fa-calendar"></i>
                                        </div>
                                   </div>
                                   
                              </div>
                         </div>
                         <div class="hr-line-dashed"></div>
                         <div class="form-group row">
                              <label class="col-sm-2 col-form-label">Amount</label>
                              <div class="col-lg-10">
                                   <%= f.text_field :amount, class: "form-control form-control-lg m-b", required: "", value: @fee.fee_details.present? ? @fee.fee_details.last.amount : 0 %>
                                   <%= f.hidden_field :fee_id, value: @fee.id %>
                              </div>
                         </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                        <%= button_tag(type: 'Submit', class: "btn btn-primary") do %>
                            Generate
                        <% end %> 
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
     $(".date").datetimepicker({
          format: 'MMMM-YYYY',
     });
</script>