<div id="modal-shows">
    <div class="modal fade" id="modal-dialog" style="display: none;">
        <div class="modal-dialog">
        <div class="modal-content animated bounceInRight">
                <div class="modal-header">
                    <h3>
                        Generate Student Transportation Fees
                    </h3>
                    <button type="button" class="close pull-right" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
                </div>
                <%= form_for @fee_detail, html: { class: "form-horizontal" } do |f| %>
                    <div class="modal-body">
                        <div class=row>
                            <div class="col-md-2">
                                <div class="input-group date" id="datetimepicker1">
                                    <%= f.text_field :from_date, class: "form-control", placeholder: "From Date", required: "" %>
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="input-group date" id="datetimepicker2">
                                    <%= f.text_field :to_date, class: "form-control", placeholder: "To Date", required: "" %>
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <%= f.submit 'Filter', class: "btn btn-lime btn-sm m-r-5 m-b-5"%>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                        <%= button_tag(type: 'Submit', class: "btn btn-primary") do %>
                            Save changes
                        <% end %> 
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
