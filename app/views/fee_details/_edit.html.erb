<div id="modal-shows">
    <div class="modal fade" id="modal-dialog" style="display: none;">
        <div class="modal-dialog">
        <div class="modal-content animated bounceInRight">
                <div class="modal-header">
                    <h3>
                        Edit Transportation Fee
                    </h3>
                    <button type="button" class="close pull-right" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
                </div>
                <%= form_for @fee_detail, html: { class: "form-horizontal" }, remote: true do |f| %>
                    <div class="modal-body">
                              <div class="hr-line-dashed"></div>
                              <div class="form-group row">
                                   <label class="col-sm-2 col-form-label">Chargeable</label>
                                   <div class="col-lg-10">
                                        <%= f.check_box :chargeable, class: "form-control" %>
                                   </div>
                              </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                        <%= button_tag(type: 'Submit', class: "btn btn-primary") do %>
                            Save changes
                        <% end %> 
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
